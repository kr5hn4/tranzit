{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tranzit",
  "version": "0.3.0",
  "identifier": "org.tranzit.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "appimage", "deb", "rpm", "nsis"],
    "icon": ["icons/icon.ico", "icons/32x32.png", "icons/icon.icns"],
    "windows": {
      "nsis": {
        "installMode": "both",
        "installerHooks": "windows/hooks.nsh"
      }
    },
    "macOS": {
      "dmg": {}
    },
    "linux": {
      "rpm": {
        "depends": ["webkit2gtk4.1", "gtk3"]
      },
      "deb": {
        "depends": ["libwebkit2gtk-4.1-0", "libgtk-3-0"]
      }
    }
  },
  "app": {
    "windows": [
      {
        "title": "tranzit",
        "width": 800,
        "height": 600,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "capabilities": ["default"],
      "csp": null
    }
  }
}
